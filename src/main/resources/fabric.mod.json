{
  "schemaVersion": 1,
  "id": "betterworldoptions",
  "version": "${version}",

  "name": "Better World Options",
  "description": "A mod for legacy versions of Minecraft that mixes classic world generation with modern features and useful options.",
  "authors": [
    "ItsElix99"
  ],

  "contact": {
    "homepage": "https://github.com/ItsElix99/Better-World-Options/",
    "sources": "https://github.com/ItsElix99/Better-World-Options/",
    "issues": "https://github.com/ItsElix99/Better-World-Options/issues"
  },

  "license": "MIT",
  "icon": "assets/betterworldoptions/icon.png",

  "environment": "*",
  "entrypoints": {
    "stationapi:event_bus": [
      "com.itselix99.betterworldoptions.BetterWorldOptions"
    ],
    "stationapi:event_bus_client": [
      "com.itselix99.betterworldoptions.event.TextureListener"
    ],
    "stationapi:event_bus_server": [
      "com.itselix99.betterworldoptions.event.BWOServerListener"
    ],
    "gcapi3": [
      "com.itselix99.betterworldoptions.config.Config"
    ],
    "gcapi3:factory_provider": [
      "com.itselix99.betterworldoptions.config.enums.WalkingAnimConfigEnumFactories",
      "com.itselix99.betterworldoptions.config.enums.WorldHeightConfigEnumFactories"
    ],
    "gcapi3:presave": [
      "com.itselix99.betterworldoptions.event.ConfigListener"
    ]
  },
  "mixins": [
    "betterworldoptions.mixins.json"
  ],

  "depends": {
    "minecraft": "1.0.0-beta.7.3",
    "stationapi": ">=2.0.0-alpha.3",
    "gcapi3": "*"
  },

  "suggests": {
    "bhcreative": "*"
  }
}
